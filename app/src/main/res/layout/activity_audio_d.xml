<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">


        <TextView
            android:id="@+id/activity_audiostime"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="时长"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/surfaceView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:background="@drawable/widge_frame_background"
            android:padding="20dp"
            android:src="@mipmap/icon_voice_suspend"/>
    </RelativeLayout>


    <Button
        android:id="@+id/audio_play_file"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="测试播放按钮"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/audio_start_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开始"/>

        <Button
            android:id="@+id/audio_pause_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂停"
            android:visibility="gone"/>

        <Button
            android:id="@+id/audio_contine_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="继续"
            android:visibility="gone"/>

        <Button
            android:id="@+id/audio_stop_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:text="停止"/>

    </LinearLayout>
</LinearLayout>