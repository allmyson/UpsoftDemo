<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.upsoft.demo.framework.activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#2196f3"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <com.upsoft.demo.framework.ui.CircleImageView
                android:id="@+id/civ_logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="10dp"
                android:src="#2196f3"
                app:civ_border_color="#ffffff"
                app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/tv_appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环保通"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_net"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_setnet"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_icon_username"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_username"/>
            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入用户名"
                android:maxLines="1"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_clear"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_psd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_psd"/>
            <EditText
                android:id="@+id/et_psd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:maxLines="1"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/iv_showOrHide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_psd_show"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:id="@+id/ll_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_yzm"/>
                    <EditText
                        android:id="@+id/et_yzm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLines="1"
                        android:padding="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#a1a1a1"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rect_cornor_gray2">
                <ImageView
                    android:id="@+id/iv_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
        >
            <com.upsoft.demo.framework.ui.SlideSwitch
                android:id="@+id/ss"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                slideswitch:isOpen="false"
                android:layout_marginRight="5dp"
                slideswitch:shape="circle"
                slideswitch:themeColor="#A6D379"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ss"
                android:layout_centerVertical="true"
                android:text="记住我"
                android:textSize="16sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_corner2"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:text="技术支持:重庆扬讯软件技术股份有限公司"
        android:textColor="#999999"
        android:textSize="12sp"/>

</LinearLayout>
